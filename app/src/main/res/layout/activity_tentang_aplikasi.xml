<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp"
android:theme="@style/AdminViewTheme"
tools:context=".tentang_aplikasi">
<TextView
    android:id="@+id/textView_Judul"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="Tentang Aplikasi"
    android:textAlignment="center"
    android:textSize="24sp"
    android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="140dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_dishub"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:src="@drawable/logo_dishub" />

            <ImageView
                android:id="@+id/img_sippyog"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo_sippyog" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Dinas Perhubungan Daerah Istimewa Yogyakarta"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developer : Jasinta Liliana, Universitas Atma Jaya Yogyakarta"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>