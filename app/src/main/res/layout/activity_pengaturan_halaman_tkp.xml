<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AdminMainTheme"
    android:background="@color/colorAdmin"
    tools:context=".View.Admin.DeskripsiParkir.pengaturan_halaman_tkp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tentang_tkp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Tentang TKP Beskalan"
            android:textSize="26dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch_ubah_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:checked="false"
            android:text="Edit Deskripsi TKP" />

        <TextView
            android:id="@+id/judul_waktu_operasional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAdmin3"
            android:text="  Waktu Operasional"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/waktu_operasional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"
            android:text="Waktu Operasional"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/judul_alamat_tkp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAdmin3"
            android:text="  Alamat TKP"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/alamat_tkp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"
            android:text="Alamat TKP"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/judul_nomor_telepon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAdmin3"
            android:text="  Nomor Telepon"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/nomor_telepon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"
            android:text="Nomor Telepon"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/judul_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAdmin3"
            android:text="  Deskripsi"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Deskripsi"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorAdmin3"
                android:text="SIMPAN"
                android:textColor="@color/colorAdmin"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnBatal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorAdmin3"
                android:text="BATAL"
                android:textColor="@color/colorAdmin"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>


