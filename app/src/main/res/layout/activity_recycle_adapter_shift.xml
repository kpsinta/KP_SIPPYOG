<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:id="@+id/row_container">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorAdmin">

        <TextView
            android:id="@+id/judul_nama_shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Nama Shift"
            android:textSize="14dp"
            android:textColor="@color/colorAdmin3"/>

        <TextView
            android:id="@+id/nama_shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Nama Shift" />

        <TextView
            android:id="@+id/judul_jam_masuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Jam Masuk"
            android:textSize="14dp"
            android:textColor="@color/colorAdmin3"/>

        <TextView
            android:id="@+id/jam_masuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Jam Masuk" />

        <TextView
            android:id="@+id/judul_jam_keluar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Jam Keluar"
            android:textSize="14dp"
            android:textColor="@color/colorAdmin3"/>

        <TextView
            android:id="@+id/jam_keluar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Jam Keluar" />

    </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>