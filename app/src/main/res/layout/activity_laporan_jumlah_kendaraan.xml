<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".View.Admin.Laporan.laporan_jumlah_kendaraan">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:id="@+id/laporan_harian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/judul_tanggal_laporan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Tanggal Laporan"
                android:textColor="@color/colorPegawai4"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tanggal_laporan_harian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Tanggal Laporan"
                android:textColor="@color/colorAdmin4"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/text_input_tanggalLaporan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="dd/mm/yyyy"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/searchTanggal"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_search_black" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/laporan_bulanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/judul_tanggal_laporan_bulanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Tanggal Laporan"
                android:textColor="@color/colorPegawai4"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tanggal_laporan_bulanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Tanggal Laporan"
                android:textColor="@color/colorAdmin4"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_bulanLaporan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Piih Bulan"
                android:textColor="@color/colorPegawai4" />

            <Spinner
                android:id="@+id/spinner_bulan_laporan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/laporan_tahunan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/judul_tanggal_laporan_tahunan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Tanggal Laporan"
                android:textColor="@color/colorPegawai4"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tanggal_laporan_tahunan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Tanggal Laporan"
                android:textColor="@color/colorAdmin4"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_tahunLaporan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Piih Tahun"
                android:textColor="@color/colorPegawai4" />

            <Spinner
                android:id="@+id/spinner_tahun_laporan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_laporan_pendapatan_tkp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical" />

</LinearLayout>

</android.support.design.widget.CoordinatorLayout>