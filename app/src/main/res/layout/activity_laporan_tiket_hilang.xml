<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".View.Admin.Laporan.laporan_tiket_hilang">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp">
    <LinearLayout
        android:id="@+id/laporan_harian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/judul_tanggal_laporan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Waktu Laporan"
                android:textColor="@color/colorPegawai4"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tanggal_laporan_harian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text=" Waktu Laporan"
                android:textColor="@color/colorAdmin4"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/text_input_tanggalLaporan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="dd/mm/yyyy"
                    android:textSize="14dp"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/searchTanggal"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_search_black" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/laporan_bulanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/judul_tanggal_laporan_bulanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Waktu Laporan"
                android:textColor="@color/colorPegawai4"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tanggal_laporan_bulanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Waktu Laporan"
                android:textColor="@color/colorAdmin4"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="7"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/text_input_bulanLaporan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="mm/yyyy"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/searchBulan"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_search_black" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/laporan_tahunan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/judul_tanggal_laporan_tahunan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Waktu Laporan"
                android:textColor="@color/colorPegawai4"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tanggal_laporan_tahunan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Waktu Laporan"
                android:textColor="@color/colorAdmin4"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="4"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/text_input_tahunLaporan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="yyyy"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/searchTahun"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_search_black" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/judul_total_tiket_hilang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Total Tiket Hilang"
            android:textColor="@color/colorPegawai4"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/total_tiket_hilang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Total Tiket Hilang"
            android:textColor="@color/colorAdmin4"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_detil_kendaraan_laporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:scrollbars="vertical" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_laporan_tiket_hilang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical" />

</LinearLayout>

</android.support.design.widget.CoordinatorLayout>