<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@color/colorAdmin"
    android:orientation="vertical"
    android:id="@+id/row_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/jenis_kendaraan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kendaraan" />

        <TextView
            android:id="@+id/kapasitas_maksimum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kapasitas Maksimum" />

        <TextView
            android:id="@+id/biaya_parkir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biaya Parkir" />

        <TextView
            android:id="@+id/biaya_denda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biaya Denda" />

    </LinearLayout>


</RelativeLayout>